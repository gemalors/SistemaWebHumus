    <div class="single-services">
        <div class="container">


            @foreach (var item in ViewBag.LibroDetalle)
            {
                <div class="row" id="tabs">
                    <div class="col-md-4">
                        <ul>
                            <div _ngcontent-c2="" class="col-md-4" role="none">
                                <div _ngcontent-c2="" class="row text-center" role="none">
                                    <div _ngcontent-c2="" class="col-md-12" role="img">
                                        <img _ngcontent-c2="" class="b-b b-t b-r b-l b-solid b-grey cover" width="220" src="@item.Portada" alt="portada">
                                    </div>
                                </div>

                                <br>
                                <div _ngcontent-c2="" class="row m-t-10" role="none">
                                    <div _ngcontent-c2="" class="col-md-12" role="button">
                                        <!---->
                                        <!----><a _ngcontent-c2="" class="btn bg-default bg-success btn-block text-white" style=" width: 220px" onclick="Addvistas(@item.IDlibro)" target="_blank" href="@item.Libro">
                                            <span _ngcontent-c2="" class="pull-left m-r-15" style="margin-top: 2px">
                                                <i _ngcontent-c2="" class="fa fa-tablet" aria-hidden="true" style="font-size: 18px"></i>
                                            </span>
                                            Leer en línea
                                        </a>
                                    </div>
                                </div>

                                <div _ngcontent-c2="" class="row m-t-5 m-b-5" role="none" style="margin-top:3%">
                                    <div _ngcontent-c2="" class="col-md-12" role="button">

                                        <button _ngcontent-c2="" class="btn bg-default bg-success btn-block text-white" style="width: 220px" data-toggle="modal" data-target="#modal-default">
                                            <span _ngcontent-c2="" class="pull-left m-r-15 m-t-5" style="margin-top: 2px">
                                                <i _ngcontent-c2="" class="fa fa fa-quote-right" aria-hidden="true" style="font-size: 18px"></i>
                                            </span>
                                            Obtener cita
                                        </button>

                                    </div>
                                </div>

                                <div _ngcontent-c2="" class="row m-t-5 m-b-5" role="none" style="margin-top:3%">
                                    <div _ngcontent-c2="" class="col-md-12" role="button">
                                        <!----><a href="@item.Libro" download="@item.Titulo .pdf">
                                            <button _ngcontent-c2="" class="btn bg-default bg-success btn-block text-white" style="width: 220px">
                                                <span _ngcontent-c2="" class="pull-left m-r-15 m-t-5" style="margin-top: 2px">
                                                    <i _ngcontent-c2="" class="fa fa-download" aria-hidden="true" style="font-size: 18px"></i>
                                                </span>
                                                Descargar
                                            </button>
                                        </a>
                                        <!---->
                                        <!---->
                                    </div>
                                </div>
                            </div>
                        </ul>
                    </div>

                    <div class="col-md-8">


                        <div _ngcontent-c2="" class="col-md-12 bg-white flex-last flex-md-first" role="main" style="margin-left:-2%;margin-top:2%">
                            <!---->
                            <div _ngcontent-c2="" class="row b-b b-solid b-grey p-b-15" role="heading">
                                <div _ngcontent-c2="" class="col-md-12" role="none">
                                    <h2 _ngcontent-c2="" class="no-margin p-t-15">
                                        @item.Titulo
                                    </h2>
                                </div>

                            </div>
                        </div>


                        <div _ngcontent-c2="" class="row" role="none">
                            <div _ngcontent-c2="" class="col-md-12 b-b b-solid b-grey p-t-10" role="none">
                                <br><br> <h5 _ngcontent-c2="" class="ng-tns-c2-0" style="  color:  #2dbb99 ;">Información Bibliográfica</h5><br>
                                <div _ngcontent-c2="" class="row m-t-20 m-b-10" role="none" style="margin-top:3%">
                                    <div _ngcontent-c2="" class="col-md-12" role="none">
                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <label _ngcontent-c2="" class="col-md-4 control-label bold">Autores:</label>
                                            <div _ngcontent-c2="" class="col-md-8 hint-text">
                                                <span _ngcontent-c2="" class="ng-tns-c2-0" style=" color: #7d7574">


                                                    @{
                                                        int cont1 = 0;

                                                        foreach (var itema in ViewBag.Autores)
                                                        {
                                                            if (ViewBag.Autores.Count > 1)
                                                            {
                                                                if (cont1 == ViewBag.Autores.Count - 1)
                                                                {
                                                                    <span>&</span>
                                                                }

                                                            }


                                                            <span> @itema.ApellidoPrimero @itema.PrimerNombre.,  </span>

                                                            cont1++;


                                                        }
                                                    }

                                                </span>
                                            </div>
                                        </div>
                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <!---->
                                        </div>

                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <label _ngcontent-c2="" class="col-md-4 control-label bold">ISBN:</label>
                                            <div _ngcontent-c2="" class="col-md-8 hint-text" role="text" style=" color: #7d7574">
                                                @item.CodigoISBN
                                            </div>
                                        </div>
                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <label _ngcontent-c2="" class="col-md-4 control-label bold">Publicación:</label>
                                            <div _ngcontent-c2="" class="col-md-8 hint-text" role="text" style=" color: #7d7574">
                                                @item.Fechapublica
                                            </div>
                                        </div>
                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <label _ngcontent-c2="" class="col-md-4 control-label bold">Editorial:</label>
                                            <div _ngcontent-c2="" class="col-md-8 hint-text" role="text" style=" color: #7d7574">
                                                @item.Editorial
                                            </div>
                                        </div>
                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <label _ngcontent-c2="" class="col-md-4 control-label bold">Vistas:</label>
                                            <div _ngcontent-c2="" class="col-md-8 hint-text" role="text" style=" color: #7d7574">

                                                @{
                                                    var letra = "";
                                                    float r = 0;

                                                    if (item.Vistas >= 1 && item.Vistas <= 999)
                                                    {
                                                        r = item.Vistas;
                                                        letra = "";
                                                    }
                                                    if (@item.Vistas >= 1000 && @item.Vistas <= 9999)
                                                    {
                                                        r = (@item.Vistas / 1000);
                                                        letra = "K";
                                                    }
                                                    if (@item.Vistas >= 1000000)
                                                    {
                                                        r = (@item.Vistas / 1000000);
                                                        letra = "M";
                                                    }


                                                    <span> @r </span><span> @letra</span>
                                                }


                                            </div>
                                        </div>
                                        <div _ngcontent-c2="" class="row form-group" role="textbox">
                                            <label _ngcontent-c2="" class="col-md-4 control-label bold">Carrera:</label>
                                            <div _ngcontent-c2="" class="col-md-8 hint-text" role="text" style=" color: #7d7574">

                                                @item.Carrera
                                            </div>
                                        </div>
                                        <!---->
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!----><!---->
                        <!---->


                    </div>
                </div>


            }
        </div>


        <!-- .modal-ver cita de libro -->
        <div class="modal fade " id="modal-default">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <p class="modal-title font-16 text-blue"><b>Referencia bibliográfica</b></p>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group row text-muted">

                            <p class="text-primary" style="margin-left:2%">APA 7ma edición</p>
                            <div class="col-sm-12">

                                @{
                                    int cont = 0;

                                    foreach (var itema in ViewBag.Autores)
                                    {
                                        if (ViewBag.Autores.Count > 1)
                                        {
                                            if (cont == ViewBag.Autores.Count - 1)
                                            {
                                                <span>&</span>
                                            }

                                        }


                                        <span> @itema.ApellidoPrimero, @itema.inicialnombre.,</span>

                                        cont++;


                                    }
                                    foreach (var item in ViewBag.CitaLibro)
                                    {
                                        <span> (@item.Fechapublica). @item.Titulo. @item.Editorial. @item.UrlAcceso </span>

                                    }}







                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Cerrar</button>

                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>



    </div>

    <br>  <br>




    <!-- Footer Starts Here -->



    <footer>
        @foreach (var item in ViewBag.DatosEditorial)
        {
            <div class="container" style="margin-top:-5%;margin-bottom:-5%">
                <div class="row">
                    <div class="col-md-3 footer-item">
                        <p style="color: #4DBB6D"><i class="fa fa-map-marker"></i> Dirección</p>
                        <p>@item.Direccion </p>
                        @*<ul class="menu-list">
                                <li><a href="#"></a></li>

                            </ul>*@
                    </div>
                    <div class="col-md-3 footer-item">
                        <p style="color: #4DBB6D"><i class="fa fa-clock-o "></i> Horario de atención</p>
                        <p>@item.Horario </p>

                    </div>
                    <div class="col-md-3 footer-item">
                        <p style="color: #4DBB6D"><i class="fa fa-phone"></i> Teléfono</p>
                        <p>@item.Telefono </p>

                    </div>
                    <div class="col-md-3 footer-item last-item">
                        <p style="color: #4DBB6D"><i class="fa fa-envelope-o"></i> Contactenos</p>
                        <p>@item.Email </p>


                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="social-icons ">
                            <li><a rel="nofollow" href="#" target="_blank" style="background-color: #4DBB6D" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" target="_blank" style="background-color: #4DBB6D" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" target="_blank" style="background-color: #4DBB6D" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                            <li><a href="#" target="_blank" style="background-color: #4DBB6D" title="Youtube"><i class="fa fa-youtube"></i></a></li>
                        </ul>
                    </div>
                    @*#A4C639*@
                </div>
                <hr />
                <div class="row">
                    <small class="col-md-12 text-light text-center">


                        @{
                            string date = DateTime.Now.ToString("MM-dd-yyyy");
                            string year = date.Substring(6, 4);

                        }

                        <a href="http://www.espam.edu.ec/" target="_blank"> <img src="~/ImagesWeb/logo.png" alt="user" width="100"></a> Coordinación General de Investigación - Editorial Humus. © @year.


                    </small>
                </div>
            </div>
        }
    </footer>




